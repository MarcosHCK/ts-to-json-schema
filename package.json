{

  "author": "MarcosHCK <marcoshck16@gmail.com>",

  "dependencies":
    {
      "ajv": "^8.17.1",
      "ts-json-schema-generator": "^2.3.0"
    },

  "description": "Convert Typescript types to JSON schemas/validators automatically",

  "devDependencies":
    {
      "@babel/core": "^7.28.4",
      "@babel/eslint-plugin": "^7.27.1",
      "@babel/preset-env": "^7.28.3",
      "@babel/preset-typescript": "^7.27.1",
      "@babel/register": "^7.28.3",
      "@eslint/js": "^9.35.0",
      "@types/node": "^24.5.1",
      "@types/webpack": "^5.28.5",
      "ajv-cli": "^5.0.0",
      "babel-loader": "^9.2.1",
      "babel-plugin-module-resolver": "^5.0.2",
      "eslint-import-resolver-typescript": "^3.6.0",
      "eslint-plugin-import": "^2.32.0",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-promise": "^7.2.1",
      "eslint": "^8.57.1",
      "dts-bundle-generator": "^9.5.1",
      "fork-ts-checker-webpack-plugin": "^9.1.0",
      "tsconfig-paths-webpack-plugin": "^4.2.0",
      "typescript": "^5.9.2",
      "webpack": "^5.101.3",
      "webpack-cli": "^6.0.1"
    },

  "files":
    [
      "AUTHORS",
      "COPYING",
      "dist/"
    ],

  "keywords":
    [
      "cli",
      "plugin",
      "typescript",
      "webpack"
    ],

  "license": "SEE LICENSE IN COPYING",
  "main": "dist/index.js",
  "name": "ts-to-json-schema",

  "scripts":
    {
      "build": "npm run build:bundle && npm run build:types",
      "build:bundle": "webpack --config webpack.config.ts",
      "build:types": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
      "dev": "webpack --config webpack.config.ts --watch",
      "lint": "eslint src --ext .ts",
      "prepare": "npm run prepare:schema:generate && npm run prepare:schema:compile",
      "prepare:schema:compile": "npx ajv compile -s src/common/TsSchema.json -o src/common/TsSchema.ajv.cjs",
      "prepare:schema:generate": "ts-json-schema-generator -p src/common/TsSchema.ts -t TsSchema -o src/common/TsSchema.json",
      "prepublishOnly": "npm run build"
    },

  "types": "dist/index.d.ts",
  "version": "0.0.1"
}

