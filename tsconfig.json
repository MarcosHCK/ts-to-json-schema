{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["esnext"],
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@common/*": ["./src/common/*"],
      "@cli/*": ["./src/cli/*"],
      "@plugin/*": ["./src/plugin/*"],
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
